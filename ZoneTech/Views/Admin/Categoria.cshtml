@model ZoneTech.Models.CategoriaML
@{
    
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="#">Resumen</a></li>
    <li class="breadcrumb-item active">Categorias</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Categorias
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <a class="btn btn-success" asp-controller="Admin" asp-action="CrearCategoria">Agregar</a>
            </div>
        </div>

        <hr />
        <table id="tablelist" class="display responsive" style="width:100%">
            <thead>
                <tr>
                       <th scope="col">Categoria Id</th>
                       <th scope="col">Nombre</th>
                       <th scope="col">Estado Id</th>
                       <th scope="col">Ruta imagen</th>

                       
                        <th>
                             <th scope="col">Opciones</th>
                        </th>
               </tr>
            </thead>
      
            <tbody>
               
                @foreach (var item in ViewBag.listado)
                {
                  
                <tr>
                    <td>@item.CategoriaId</td>
                     <td>@item.Nombre</td>
                     <td>@item.EstadoId</td>
                     <td>@item.RutaImagen</td>
                    
                <td>
                <td>
                      @Html.ActionLink("Eliminar","EliminarCategoria",new{id=@item.CategoriaId},new{@class="btn btn-danger"})
                      @Html.ActionLink("Editar","EditarCategoria",new{id=@item.CategoriaId},new{@class="btn btn-warning"})
          </td>
        </td>
      </tr>
    }
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function(){
        //alert("Read load");
        var tabla = $('#tablelist').DataTable();
      });
    </script>
}