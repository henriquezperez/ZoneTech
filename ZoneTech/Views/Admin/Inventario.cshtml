@model ZoneTech.Models.InventarioML
@{
    
}
<a class="btn btn-success" asp-controller="Admin" asp-action="Articulonuevo">Agregar</a>

<h1>Lista de Articulos</h1>
<table class="table table-dark table-striped" id="tablelist">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Existencia</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.query)
    {
      <tr>
        <td>@item.ID</td>
        <td>@item.Nombre</td>
        <td>@item.Existencia</td>
      </tr>
    }
  </tbody>
</table>

@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
      $(document).ready(function(){
        //alert("Read load");
        var tabla = $('#tablelist').DataTable();
      });
    </script>
}
