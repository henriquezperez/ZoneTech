@model ZoneTech.Models.ArticuloML
@{

}
<a class="btn btn-success" asp-controller="Admin" asp-action="Articulonuevo">Agregar</a>

<h1>Lista de Articulos</h1>
<table class="table table-dark table-striped" id="tablelist">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Marca</th>
      <th scope="col">Categoria</th>
      <th scope="col">Descripci√≥n</th>
      <th scope="col">Costo</th>
      <th scope="col">Precio</th>
      <th scope="col">Estado</th>
      <th>
        <th scope="col">Opciones</th>
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.list)
    {
      <tr>
        <td>@item.ArticuloId</td>
        <td>@item.Nombre</td>
        <td>@item.MarcaId</td>
        <td>@item.CategoriaId</td>
        <td>@item.Descripcion</td>
        <td>@item.Costo</td>
        <td>@item.Precio</td>
        <td>@item.EstadoId</td>
        <td>
          <td>
            @Html.ActionLink("Admin","DeleteDB",new{id=@item.ArticuloId},new{@class="btn btn-danger"})
            @Html.ActionLink("Load","Load",new{id=@item.ArticuloId},new{@class="btn btn-warning"})
          </td>
        </td>
      </tr>
    }
  </tbody>
</table>

@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

