@model ZoneTech.Models.EstadoML
@{
    
}
<h1>Configuraci√≥n de Estados</h1>
<a class="btn btn-success" asp-controller="Admin" asp-action="EstadoNuevo">Agregar</a>
<table class="table table-dark table-striped" id="tablelist">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
       <th>
        <th scope="col">Opciones</th>
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.listado)
    {
      <tr>
        <td>@item.EstadoId</td>
        <td>@item.Nombre</td>
        <td>
          <td>
            @Html.ActionLink("Eliminar","EstadoEliminar",new{id=@item.EstadoId},new{@class="btn btn-danger"})
            @Html.ActionLink("Editar","EstadoEditar",new{id=@item.EstadoId},new{@class="btn btn-warning"})
          </td>
        </td>
      </tr>
    }
  </tbody>
</table>

@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function(){
        //alert("Read load");
