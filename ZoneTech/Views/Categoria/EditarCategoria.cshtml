
@model ZoneTech.Models.CategoriaML
@{}
<h3>Actualizar</h3>
<form asp-controller="Categoria" asp-action="EditarCategoria">
    <div>
        <label for="">ID</label>
        <input type="text" asp-for="CategoriaId"/>
    </div>
    <div>
       <label for="">Nombre</label>
        <input type="text" asp-for="Nombre"/>      
    </div>
    <div>
       <label for="">Imagen</label>
        <input type="text" asp-for="RutaImagen"/>      
    </div>
      <div class="mb-3">
        <label for="" class="form-label">Estado</label>
        <select class="form-select" aria-label="Default select example" name="EstadoId">
            @foreach(var item in ViewBag.estado)
            {
              <option value="@item.EstadoId">@item.Nombre</option>
            }
        </select>   
    </div>
    <button type="submit">Guardar</button>
</form>